	<filter-mapping>
	    <filter-name>CORS</filter-name>
	    <url-pattern>/*</url-pattern>
	</filter-mapping>

	
	<context-param>
		<param-name>cynthia.doTimerMaxRetryAccount</param-name>
    	<param-value>5</param-value>
  	</context-param>

	<context-param>
		<param-name>cynthia.scriptThreads</param-name>
    	<param-value>4</param-value>
  	</context-param>

  	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath*:spring-beans.xml</param-value>
	</context-param>

	<listener>
         <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>
    
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
 
	<filter>
		<filter-name>LoginFilterScriptManagement</filter-name>
		<filter-class>com.sogou.qadev.service.cynthia.util.LoginFilter</filter-class>
		<init-param>
			<param-name>dataAndEventIds</param-name>
			<param-value>3</param-value>
		</init-param>
		<init-param>
			<param-name>retryAccount</param-name>
			<param-value>5</param-value>
		</init-param>
	</filter>

	<filter>
		<filter-name>LoginFilterManagement</filter-name>
		<filter-class>com.sogou.qadev.service.cynthia.util.LoginFilter</filter-class>
		<init-param>
			<param-name>dataAndEventIds</param-name>
			<param-value>2</param-value>
		</init-param>
		<init-param>
			<param-name>retryAccount</param-name>
			<param-value>5</param-value>
		</init-param>
	</filter>

	<filter>
		<filter-name>LoginFilterFront</filter-name>
		<filter-class>com.sogou.qadev.service.cynthia.util.LoginFilter</filter-class>
		<init-param>
			<param-name>dataAndEventIds</param-name>
			<param-value>1</param-value>
		</init-param>
		<init-param>
			<param-name>retryAccount</param-name>
			<param-value>5</param-value>
		</init-param>
		<init-param>
			<param-name>sendRedirectUrl</param-name>
			<param-value></param-value>
		</init-param>
		<init-param>
			<param-name>magic</param-name>
			<param-value>jjzzwws</param-value>
		</init-param>
		<init-param>
			<param-name>magicUrls</param-name>
			<param-value>attachment;checkExist.do;getCrashTasks.jsp;webservice;queryProjectBugNum.do;client.jsp;login;cleanSession.do;register;executeFilter.jsp;getCrashTasks.jsp;login.jsp;register.jsp;logout.do;logout.jsp</param-value>
		</init-param>
		<init-param>
			<param-name>noIEUrls</param-name>
			<param-value>filter.jsp</param-value>
		</init-param>
	</filter>

	<mime-mapping>
        <extension>xls</extension>
        <mime-type>application/vnd.ms-excel</mime-type>
    </mime-mapping>

	<!-- Charset Filter Mapping -->
	<filter-mapping>
		<filter-name>charsetfilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
 	
 	<filter-mapping>
		<filter-name>LoginFilterManagement</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>LoginFilterFront</filter-name>
		<url-pattern>*.jsp</url-pattern>  
        <url-pattern>*.html</url-pattern>  
        <url-pattern>*.do</url-pattern>  
	</filter-mapping>
	
