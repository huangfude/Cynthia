	<filter-mapping>
		<filter-name>LoginFilterFront</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>LoginFilterFront</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
